<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="triangle" class="com.spring.org.Triangle" >
	<property name="a" ref="zeroPoint"/>
	<property name="b" ref="point2"/>
	<property name="c" ref="point3"/>
	
	
	</bean>
	<bean id="zeroPoint" class="com.spring.org.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="point2" class="com.spring.org.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="point3" class="com.spring.org.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>
</beans>